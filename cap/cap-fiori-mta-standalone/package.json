{
    "name": "standaloneCAPProject",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^9",
        "@sap/xsenv": "^6",
        "@sap/xssec": "^4",
        "express": "^4",
        "passport": "^0.7.0",
        "sqlite3": "^5.1.7",
        "@cap-js/sqlite": "^2",
        "@sap/cds-dk": "^9"
    },
    "devDependencies": {
        "mbt": "^1.2.29",
        "rimraf": "^5.0.5"
    },
    "scripts": {
        "start": "cds watch",
        "watch-mystandalonecapproject": "cds watch --open mystandalonecapproject/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy standaloneCAPProject --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "auth": "xsuaa"
            },
            "db": {
            "kind": "sqlite",
            "credentials": {
              "database": ":memory:"
            }
         }
        },
        "features": {
          "in_memory_db": true
        }
    },
    "sapux": [
        "app/mystandalonecapproject"
    ]
}